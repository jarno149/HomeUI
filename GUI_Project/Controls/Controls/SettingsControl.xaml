<UserControl x:Class="Controls.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" Width="1200">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.45,0" StartPoint="0.5,1">
            <GradientStop Color="Black" Offset="-0.1" />
            <GradientStop Color="#373838" Offset="0.3" />
            <GradientStop Color="Black" Offset="1.3" />
        </LinearGradientBrush>
    </UserControl.Background>
</UserControl>
